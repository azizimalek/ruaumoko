#!/usr/bin/env python

import sys
from os.path import abspath, split, join
sys.path.append(join(split(abspath(__file__))[0], '..'))

from elevation import config, Elevation

if len(sys.argv) == 3:
    cfg = config.default_config()
    latitude = sys.argv[1]
    longitude = sys.argv[2]
elif len(sys.argv) == 4:
    cfg = config.load_config(sys.argv[1])
    latitude = sys.argv[2]
    longitude = sys.argv[3]
else:
    print "usage: get-elevation [CONFIG_FILE] LATITUDE LONGITUDE"
    sys.exit(2)

try:
    latitude = float(latitude)
    longitude = float(longitude)
except ValueError as e:
    print e
    sys.exit(2)

elevation = Elevation(cfg)
print(elevation.lookup(latitude, longitude), file=sys.stderr)
