#!/usr/bin/env python3

from __future__ import print_function

import sys
from os.path import abspath, split, join
sys.path.append(join(split(abspath(__file__))[0], '..'))

from ruaumoko import config, Dataset

if len(sys.argv) == 3:
    cfg = config.default_config()
    latitude = sys.argv[1]
    longitude = sys.argv[2]
elif len(sys.argv) == 4:
    cfg = config.load_config(sys.argv[1])
    latitude = sys.argv[2]
    longitude = sys.argv[3]
else:
    print("usage:", sys.argv[0], "[CONFIG_FILE] LATITUDE LONGITUDE", file=sys.stderr)
    sys.exit(2)

try:
    latitude = float(latitude)
    longitude = float(longitude)
except ValueError as e:
    print(e)
    sys.exit(2)

elevation = Dataset(cfg['dataset']['filename'])
print(elevation.get(latitude, longitude), file=sys.stderr)
