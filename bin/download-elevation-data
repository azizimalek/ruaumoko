from __future__ import print_function

import sys
from os.path import abspath, split, join
sys.path.append(join(split(abspath(__file__))[0], '..'))

from ruaumoko import config, Downloader

if len(sys.argv) == 2:
    cfg = config.load_config(sys.argv[1])
elif len(sys.argv) <= 1:
    cfg = config.default_config()
else:
    print("usage:", sys.argv[0], "[CONFIG_FILE]", file=sys.stderr)
    sys.exit(2)

downloader = Downloader(cfg)
downloader.run()
